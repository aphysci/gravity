# @configure_input@

# Package-related substitution variables
package        = @PACKAGE_NAME@
version        = @PACKAGE_VERSION@
tarname        = @PACKAGE_TARNAME@

# Prefix-related substitution variables
prefix         = @prefix@
exec_prefix    = @exec_prefix@
bindir         = @bindir@

# Tool-related substitution variables
CC             = @CC@
CXX            = @CXX@
DEFS           = @DEFS@
LIBS           = @LIBS@
CFLAGS         = @CFLAGS@
AC_CFLAGS      = @CFLAGS@
AC_CPPFLAGS    = @CPPFLAGS@
INSTALL        = @INSTALL@
INSTALL_DATA   = @INSTALL_DATA@
INSTALL_PROGRAM= @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@
AC_LDFLAGS     = @LDFLAGS@
LEX            = @LEX@
YACC           = @YACC@

# VPATH-related substitution variables
top_builddir   = @top_builddir@
builddir       = @builddir@
srcdir         = @srcdir@
VPATH          = @srcdir@ 

CC=$(CXX)

KEYVALUE_PARSER_DIR=../../../../src/keyvalue_parser
GRAVLIB_DIR=../../../../src/api/cpp
COMPONENTS_BIN_DIR=../../../../src/components/cpp/bin
GRAVTEST_DIR=../../../
PROG_NAME=$(notdir $(shell pwd) )

INCLUDES=-I$(GRAVLIB_DIR) -I$(GRAVTEST_DIR) $(AC_CPPFLAGS)
CFLAGS=-std=c++11 $(INCLUDES) -L$(GRAVLIB_DIR) -L$(KEYVALUE_PARSER_DIR) $(AC_LDFLAGS) $(AC_CFLAGS)

SYSTEM:=$(strip $(shell uname -s))

ifneq (,$(findstring MINGW32_NT,$(SYSTEM)))
        OS_SPECIFIC_LIBS = -lwsock32 -lpthread
        PATH:=${PATH}:$(COMPONENTS_BIN_DIR)
windows: all;
else ifneq (,$(findstring Linux,$(SYSTEM)))
        OS_SPECIFIC_LIBS = -lrt
        PATH:=${PATH}:$(COMPONENTS_BIN_DIR)
linux: all;
else
ostype: ; @echo "ERROR UNKNOWN OS: " $(SYSTEM);
endif
LIBS=-lgravity -lprotobuf -lkeyvalue_parser -lzmq $(OS_SPECIFIC_LIBS) $(ADDITIONAL_LIBS)

TEST_SRC=$(wildcard *.h)
SRC=$(wildcard *.cpp)

all: publisher subscriber provider requestor

%.o:%.cpp $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

publisher: Publisher.o
	$(CC) -o $@ Publisher.o $(CFLAGS) $(LIBS)

subscriber: Subscriber.o
	$(CC) -o $@ Subscriber.o $(CFLAGS) $(LIBS)

provider: Provider.o
	$(CC) -o $@ Provider.o $(CFLAGS) $(LIBS)

requestor: Requestor.o
	$(CC) -o $@ Requestor.o $(CFLAGS) $(LIBS)

test: publisher subscriber provider requestor
	./$^

clean:
	@rm -rf publisher subscriber provider requestor *.o runner.cpp


