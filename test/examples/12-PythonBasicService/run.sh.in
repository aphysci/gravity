# @configure_input@

# Tool-related substitution variables
PROTOBUF_LIB_DIR=@Protobuf_LIBRARY_RELEASE@
ZMQ_LIB_DIR=@ZeroMQ_LIBRARY_RELEASE@
WITHOUT_PYTHON=@SKIP_PYTHON@
PYTHON=python3
SD_BIN_DIR=@ServiceDirectory_BINARY_DIR@

if test $WITHOUT_PYTHON = OFF;
then

   export PATH=$PATH:../../../src/components/cpp/bin
   export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$ZMQ_LIB_DIR:../../../src/api/cpp:../../../src/keyvalue_parser:$ZMQ_LIB_DIR:$PROTOBUF_LIB_DIR
   export PYTHONPATH=~/Gravity/build/install/lib

   $SD_BIN_DIR/ServiceDirectory &
   SDPID=$!
   
   $PYTHON requestor.py

   kill $SDPID
fi

